<UserControl x:Class="AutomaticTestingSystem.UserControls.Settings.TcpIpType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
    <Grid >
        <StackPanel>
            <TextBox Style="{StaticResource FloatingHintTextBoxRed}" Text="{Binding IP}" HorizontalAlignment="Stretch" Margin="4 8"
                     VerticalContentAlignment="Bottom" Height="50">
                <wpf:HintAssist.Hint>
                    <TextBlock FontWeight="Bold" Foreground="Blue" Text="IP Address"/>
                </wpf:HintAssist.Hint>
            </TextBox>
            <TextBox Style="{StaticResource FloatingHintTextBoxRed}" Text="{Binding Port}" HorizontalAlignment="Stretch" Margin="4 8"
                     VerticalContentAlignment="Bottom" Height="50">
                <wpf:HintAssist.Hint>
                    <TextBlock FontWeight="Bold" Foreground="Blue" Text="Port"/>
                </wpf:HintAssist.Hint>
            </TextBox>
        </StackPanel>
    </Grid>
</UserControl>
